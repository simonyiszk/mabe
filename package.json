{
	"name": "mabe-website",
	"private": true,
	"scripts": {
		"build": "next build",
		"build:analyze": "cross-env ANALYZE=true npm run build",
		"clean": "git clean --force -dx --exclude .env.local --exclude .env.*.local --exclude node_modules/ --exclude .husky/",
		"dev": "next dev",
		"fix": "run-s fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path ./.gitignore .",
		"lint:prettier": "prettier --check --ignore-path ./.gitignore .",
		"lint:typescript": "tsc",
		"prepare": "husky install",
		"start": "next start",
		"cms-typegen": "contentful-typescript-codegen --output src/@types/generated/contentful.d.ts"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown",
		"*.{js,ts,tsx}": "eslint --fix"
	},
	"dependencies": {
		"@contentful/rich-text-react-renderer": "^15.17.1",
		"@contentful/rich-text-types": "^16.2.1",
		"autoprefixer": "^10.4.15",
		"babel-plugin-optimize-clsx": "^2.6.2",
		"clsx": "^2.0.0",
		"contentful": "^9.0.0",
		"contentful-management": "^7.41.0",
		"next": "^13.4.19",
		"next-compose-plugins": "^2.2.1",
		"postcss-focus-visible": "^9.0.0",
		"postcss-import": "^15.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.11.0",
		"sharp": "^0.32.6",
		"tailwindcss": "^3.3.3"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"@tsconfig/next": "^2.0.0",
		"@types/node": "^20.5.7",
		"@types/react": "^18.2.21",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"contentful-typescript-codegen": "^3.4.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.1",
		"eslint": "^8.48.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-next": "^13.4.19",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-etc": "^2.0.3",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-etc": "^2.0.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.2",
		"typescript": "^5.2.2"
	}
}
