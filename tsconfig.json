{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": { "@/*": ["*"], "*": [""] },
		"importsNotUsedAsValues": "error",
		"strict": true,
		"target": "es2017",
		"module": "esnext",
		"allowJs": true
	},
	"include": [
		"*.config.js",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"./getContentfulEnvironment.js"
	],
	"exclude": ["node_modules"]
}
