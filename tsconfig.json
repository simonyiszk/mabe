{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"@/*": ["*"],
			"*": [""]
		},
		"verbatimModuleSyntax": true,
		"strict": true,
		"target": "es2017",
		"module": "esnext",
		"allowJs": true
	},
	"include": [
		"*.config.js",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"./getContentfulEnvironment.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
